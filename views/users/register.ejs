<% layout('layouts/boilerplate') %> 
<div class="d-flex justify-content-center align-items-center">
  <div class="card shadow bg-info" style="width: 18rem;">
    <img src="https://images.unsplash.com/photo-1498598457418-36ef20772bb9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title font-weight-bold mb-3">Register</h5>
      <form action="/register"method="POST" class="validate-form" novalidate>
        <div class="mb-3">
           
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control"name="username" id="username"required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control"name="email" id="email"required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control"name="password" id="password"required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <input type="submit" name="" id="" class="btn btn-success btn-block">
    </form>
    </div>
  </div>

</div>

